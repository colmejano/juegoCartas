import javax.swing.*;

import java.awt.*;

import java.awt.event.ActionListener;

import java.awt.event.ActionEvent;

public class Principal implements ActionListener{

    private JFrame menu,ventanaBlackJack,ventanaSiete;
    private JButton nueva_p,cargar,creditos,nueva_pBlackJack,nueva_pSieteYMedia,nueva_pAtras,
    		blackReanudar,blackGuardar,blackSalir,blackPausar,
    		sieteReanudar,sieteGuardar,sieteSalir,sietePausar,sietePide,sietePlantar;


    public void crearMenuPrincipal(){
        JLabel fondo,logo;
        menu = new JFrame("Juego de Cartas");
        menu.setSize(1024,1024);
        menu.setLocationRelativeTo(null);
		menu.setLayout(null);
		menu.setResizable(false);
		menu.setDefaultCloseOperation(menu.EXIT_ON_CLOSE);
        logo = new JLabel();
        fondo = new JLabel();
        fondo.setIcon(new ImageIcon("src/textura/texturaFondo.jpg"));
		fondo.setVisible(true);
		logo.setIcon(new ImageIcon("src/textura/logo.png"));
		logo.setBounds(200,200,600,100);
		logo.setVisible(true);
		menu.setContentPane(fondo);
		menu.add(logo);
		menu.setVisible(true);
        nueva_p = new JButton("Comenzar nueva partida");
		nueva_p.setBounds(400,400,200,50);
		cargar = new JButton("Cargar Partida");
		cargar.setBounds(400,470,200,50);
		creditos = new JButton("Creditos");
		creditos.setBounds(400,540,200,50);
		menu.add(nueva_p);
		menu.add(cargar);
		menu.add(creditos);
		nueva_p.addActionListener(this);
		cargar.addActionListener(this);
		creditos.addActionListener(this);
		nueva_p.setVisible(true);
        cargar.setVisible(true);
        creditos.setVisible(true);
    }
    

    public void ventanaBlackJack(){
    	ventanaBlackJack = new JFrame("Black Jack");
    	ventanaBlackJack.setSize(1024,1024);
    	ventanaBlackJack.setLocationRelativeTo(null);
    	ventanaBlackJack.setLayout(null);
    	ventanaBlackJack.setResizable(false);
    	ventanaBlackJack.setDefaultCloseOperation(ventanaBlackJack.EXIT_ON_CLOSE);
        JLabel logo = new JLabel();
        JLabel fondo = new JLabel();
        fondo.setIcon(new ImageIcon("src/textura/texturaFondo.jpg"));
		fondo.setVisible(true);
		logo.setIcon(new ImageIcon("src/textura/logo.png"));
		logo.setBounds(200,200,600,100);
		logo.setVisible(false);
		ventanaBlackJack.setContentPane(fondo);
		ventanaBlackJack.add(logo);
        blackPausar = new JButton("Pausar");
        blackPausar.setBounds(0,0,200,50);
        blackPausar.addActionListener(this);
        ventanaBlackJack.add(blackPausar);
        blackPausar.setVisible(true);
        ventanaBlackJack.setVisible(true);

    }
    
    public void menuPausaBlackJack(){
    	// Desactivamos la ventana para que al recargarla aparezcan los botones
    	ventanaBlackJack.setVisible(false);
    	
        blackReanudar = new JButton("Reanudar");
        blackGuardar = new JButton("Guardar");
        blackSalir = new JButton("Salir");
        blackReanudar.setBounds(400,400,200,50);
        blackGuardar.setBounds(400,470,200,50);
        blackSalir.setBounds(400,540,200,50);
        blackReanudar.addActionListener(this);
        blackGuardar.addActionListener(this);
        blackSalir.addActionListener(this);
        blackReanudar.setVisible(true);
        blackGuardar.setVisible(true);
        blackSalir.setVisible(true);
        ventanaBlackJack.add(blackReanudar);
        ventanaBlackJack.add(blackGuardar);
        ventanaBlackJack.add(blackSalir);
        
        ventanaBlackJack.setVisible(true);
        
    }
    
    public void ventanaSiete(){
    	ventanaSiete = new JFrame("Siete y Media");
    	ventanaSiete.setSize(1024,1024);
    	ventanaSiete.setLocationRelativeTo(null);
    	ventanaSiete.setLayout(null);
    	ventanaSiete.setResizable(false);
    	ventanaSiete.setDefaultCloseOperation(ventanaSiete.EXIT_ON_CLOSE);
        JLabel logo = new JLabel();
        JLabel fondo = new JLabel();
        fondo.setIcon(new ImageIcon("src/textura/texturaFondo.jpg"));
		fondo.setVisible(true);
		logo.setIcon(new ImageIcon("src/textura/logo.png"));
		logo.setBounds(200,200,600,100);
		logo.setVisible(false);
		ventanaSiete.setContentPane(fondo);
		ventanaSiete.add(logo);
        sietePausar = new JButton("Pausar");
        sietePausar.setBounds(0,0,200,50);
        sietePausar.addActionListener(this);
        ventanaSiete.add(sietePausar);
        sietePide = new JButton("Pedir");
        sietePlantar = new JButton("Plantarse");
        sietePide.setBounds(400,900,200,50);
        sietePide.addActionListener(this);
        ventanaSiete.add(sietePide);
        sietePide.setVisible(true);
        sietePlantar.setBounds(700,900,200,50);
        sietePlantar.addActionListener(this);
        ventanaSiete.add(sietePlantar);
        sietePlantar.setVisible(true);
        sietePausar.setVisible(true);
        ventanaSiete.setVisible(true);

    }

    public void menuPausaSiete(){
    	// Desactivamos la ventana para que al recargarla aparezcan los botones
    	ventanaSiete.setVisible(false);
    	
        sieteReanudar = new JButton("Reanudar");
        sieteGuardar = new JButton("Guardar");
        sieteSalir = new JButton("Salir");
        sieteReanudar.setBounds(400,400,200,50);
        sieteGuardar.setBounds(400,470,200,50);
        sieteSalir.setBounds(400,540,200,50);
        sieteReanudar.addActionListener(this);
        sieteGuardar.addActionListener(this);
        sieteSalir.addActionListener(this);
        sieteReanudar.setVisible(true);
        sieteGuardar.setVisible(true);
        sieteSalir.setVisible(true);
        ventanaSiete.add(sieteReanudar);
        ventanaSiete.add(sieteGuardar);
        ventanaSiete.add(sieteSalir);
        
        ventanaSiete.setVisible(true);
        
    }


    public Principal(){

        crearMenuPrincipal();

        

    }



    public void actionPerformed(ActionEvent e){

		if(e.getSource()==nueva_p){
			nueva_p.setVisible(false);
            cargar.setVisible(false);
            creditos.setVisible(false);
            nueva_pBlackJack = new JButton("Black Jack");
            nueva_pSieteYMedia = new JButton("Siete y Media");
            nueva_pAtras = new JButton("Atras");
            nueva_pBlackJack.setBounds(400,400,200,50);
            nueva_pSieteYMedia.setBounds(400,470,200,50);
            nueva_pAtras.setBounds(400,540,100,50);
            menu.add(nueva_pBlackJack);
            menu.add(nueva_pSieteYMedia);
            menu.add(nueva_pAtras);
            nueva_pBlackJack.addActionListener(this);
            nueva_pSieteYMedia.addActionListener(this);
            nueva_pAtras.addActionListener(this);
            nueva_pBlackJack.setVisible(true);
            nueva_pSieteYMedia.setVisible(true);
            nueva_pAtras.setVisible(true);

		}

		if(e.getSource()==cargar){

			

		}

		if(e.getSource()==creditos){

			

		}

        if(e.getSource()==nueva_pBlackJack){

            ventanaBlackJack();
            menu.remove(nueva_pBlackJack);
            menu.remove(nueva_pSieteYMedia);
            menu.remove(nueva_pAtras);
            menu.setVisible(false);

        }

        if(e.getSource()==nueva_pSieteYMedia){
        	ventanaSiete();
        	menu.remove(nueva_pBlackJack);
        	menu.remove(nueva_pSieteYMedia);
        	menu.remove(nueva_pAtras);
        	menu.setVisible(false);


        }

        if(e.getSource()==nueva_pAtras){
            menu.remove(nueva_pBlackJack);
            menu.remove(nueva_pSieteYMedia);
            menu.remove(nueva_pAtras);
        }
        if(e.getSource()==blackPausar){

            this.menuPausaBlackJack();
        }
        if(e.getSource()==sietePausar){
        	this.menuPausaSiete();
        }

        if(e.getSource()==blackReanudar){
       	 	// Para refrescar la ventana
        	ventanaBlackJack.setVisible(false);
            
        	ventanaBlackJack.remove(blackReanudar);
            ventanaBlackJack.remove(blackGuardar);
            ventanaBlackJack.remove(blackSalir);
            
            ventanaBlackJack.setVisible(true);

        }
        if(e.getSource()==sieteReanudar){
       	 	// Para refrescar la ventana
        	ventanaSiete.setVisible(false);
            
        	ventanaSiete.remove(sieteReanudar);
            ventanaSiete.remove(sieteGuardar);
            ventanaSiete.remove(sieteSalir);
            
            ventanaSiete.setVisible(true);

        }
        if(e.getSource()==blackGuardar){



        }
        if(e.getSource()==sieteGuardar){



        }
        if(e.getSource()==sietePlantar){
        	
        }
        if(e.getSource()==sietePide){
        	
        }
        if(e.getSource()==blackSalir){
            ventanaBlackJack.setVisible(false);
            menu.setVisible(true);
            nueva_p.setVisible(true);
            cargar.setVisible(true);
            creditos.setVisible(true);
            

        }
        if(e.getSource()==sieteSalir){
            ventanaSiete.setVisible(false);
            menu.setVisible(true);
            nueva_p.setVisible(true);
            cargar.setVisible(true);
            creditos.setVisible(true);
            

        }
	}



    public static void main(String args[]){

        Principal programaPrincipal = new Principal();
        

    }

}
