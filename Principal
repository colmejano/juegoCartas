import javax.swing.*;

import java.awt.*;

import java.awt.event.ActionListener;

import java.awt.event.ActionEvent;





public class Principal implements ActionListener{

    private JFrame menu,ventanaBlackJack;
    private JButton nueva_p,cargar,creditos,nueva_pBlackJack,nueva_pSieteYMedia,nueva_pAtras,reanudar,guardar,salir,pausar;

    





    public void crearMenuPrincipal(){

        JLabel fondo,logo;

        menu = new JFrame("Juego de Cartas");

        menu.setSize(1024,1024);

        menu.setLocationRelativeTo(null);

		menu.setLayout(null);

		menu.setResizable(false);

		menu.setDefaultCloseOperation(menu.EXIT_ON_CLOSE);

        logo = new JLabel();

        fondo = new JLabel();

        fondo.setIcon(new ImageIcon("src/textura/texturaFondo.jpg"));

		fondo.setVisible(true);

		logo.setIcon(new ImageIcon("src/textura/logo.png"));

		logo.setBounds(200,200,600,100);

		logo.setVisible(true);

		menu.setContentPane(fondo);

		menu.add(logo);

		menu.setVisible(true);

        nueva_p = new JButton("Comenzar nueva partida");

		nueva_p.setBounds(400,400,200,50);

		cargar = new JButton("Cargar Partida");

		cargar.setBounds(400,470,200,50);

		creditos = new JButton("Creditos");

		creditos.setBounds(400,540,200,50);

		menu.add(nueva_p);

		menu.add(cargar);

		menu.add(creditos);

		nueva_p.addActionListener(this);

		cargar.addActionListener(this);

		creditos.addActionListener(this);
		
		 nueva_p.setVisible(true);

         cargar.setVisible(true);

         creditos.setVisible(true);

    }
    

    public void ventanaBlackJack(){
    	ventanaBlackJack = new JFrame("Black Jack");
    	ventanaBlackJack.setSize(1024,1024);
    	ventanaBlackJack.setLocationRelativeTo(null);
    	ventanaBlackJack.setLayout(null);
    	ventanaBlackJack.setResizable(false);
    	ventanaBlackJack.setDefaultCloseOperation(ventanaBlackJack.EXIT_ON_CLOSE);
        JLabel logo = new JLabel();
        JLabel fondo = new JLabel();
        fondo.setIcon(new ImageIcon("src/textura/texturaFondo.jpg"));
		fondo.setVisible(true);
		logo.setIcon(new ImageIcon("src/textura/logo.png"));
		logo.setBounds(200,200,600,100);
		logo.setVisible(false);
		ventanaBlackJack.setContentPane(fondo);
		ventanaBlackJack.add(logo);
        pausar = new JButton("Pausar");
        pausar.setBounds(0,0,200,50);
        pausar.addActionListener(this);
        ventanaBlackJack.add(pausar);
        pausar.setVisible(true);
        ventanaBlackJack.setVisible(true);

    }
    
    public void menuPausa(){

        reanudar = new JButton("Reanudar");

        guardar = new JButton("Guardar");

        salir = new JButton("Salir");

        reanudar.setBounds(400,400,200,50);

        guardar.setBounds(400,470,200,50);

        salir.setBounds(400,540,200,50);

        reanudar.addActionListener(this);

        guardar.addActionListener(this);

        salir.addActionListener(this);
        
        reanudar.setVisible(true);
        guardar.setVisible(true);
        salir.setVisible(true);


        ventanaBlackJack.add(reanudar);

        ventanaBlackJack.add(guardar);

        ventanaBlackJack.add(salir);
        
        
    }




    public Principal(){

        crearMenuPrincipal();

        

    }



    public void actionPerformed(ActionEvent e){

		if(e.getSource()==nueva_p){

			nueva_p.setVisible(false);

            cargar.setVisible(false);

            creditos.setVisible(false);

            nueva_pBlackJack = new JButton("Black Jack");

            nueva_pSieteYMedia = new JButton("Siete y Media");

            nueva_pAtras = new JButton("Atras");

            nueva_pBlackJack.setBounds(400,400,200,50);

            nueva_pSieteYMedia.setBounds(400,470,200,50);

            nueva_pAtras.setBounds(400,540,100,50);

            menu.add(nueva_pBlackJack);

            menu.add(nueva_pSieteYMedia);

            menu.add(nueva_pAtras);

            nueva_pBlackJack.addActionListener(this);

            nueva_pSieteYMedia.addActionListener(this);

            nueva_pAtras.addActionListener(this);

            nueva_pBlackJack.setVisible(true);

            nueva_pSieteYMedia.setVisible(true);

            nueva_pAtras.setVisible(true);

		}

		if(e.getSource()==cargar){

			

		}

		if(e.getSource()==creditos){

			

		}

        if(e.getSource()==nueva_pBlackJack){

            ventanaBlackJack();
            menu.remove(nueva_pBlackJack);
            menu.remove(nueva_pSieteYMedia);
            menu.remove(nueva_pAtras);
            menu.setVisible(false);

        }

        if(e.getSource()==nueva_pSieteYMedia){



        }

        if(e.getSource()==nueva_pAtras){

            menu.remove(nueva_pBlackJack);

            menu.remove(nueva_pSieteYMedia);

            menu.remove(nueva_pAtras);

           

        }
        if(e.getSource()==pausar){

            this.menuPausa();


        }

        if(e.getSource()==reanudar){
       	 
       	
            ventanaBlackJack.remove(reanudar);

            ventanaBlackJack.remove(guardar);

            ventanaBlackJack.remove(salir);

        }

        if(e.getSource()==guardar){



        }

        if(e.getSource()==salir){
            ventanaBlackJack.setVisible(false);
            menu.setVisible(true);
            nueva_p.setVisible(true);
            cargar.setVisible(true);
            creditos.setVisible(true);
            

        }

	}



    public static void main(String args[]){

        Principal programaPrincipal = new Principal();
        

    }

}
